<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/voice_rcd_hint_rcding"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/voice_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/voice_rcd_hint_bg"
            android:gravity="bottom|center"
            android:minWidth="140dp"
            android:orientation="vertical"
            android:paddingLeft="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:src="@mipmap/voice_rcd_hint" />

                <ImageView
                    android:id="@+id/volume"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/amp1" />
            </LinearLayout>

            <TextView
                android:id="@+id/chanle_record"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/message_upchanle_audio" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/voice_rcd_cancel_bg"
            android:padding="7dp"
            android:src="@mipmap/rcd_cancel_icon"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/del_re"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/voice_rcd_cancel_bg_focused"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/sc_img1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/rcd_cancel_icon" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_rcd_hint_loading"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/voice_rcd_hint_tooshort"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/voice_to_short" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="时间太短"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>