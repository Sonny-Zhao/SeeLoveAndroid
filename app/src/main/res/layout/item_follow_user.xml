<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/headUrl"
        android:layout_width="@dimen/layout_45dp"
        android:layout_height="@dimen/layout_45dp"
        android:layout_margin="@dimen/layout_10dp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/headUrl"
        android:textColor="@color/gray_73"
        android:textSize="@dimen/font_15sp" />

    <ImageView
        android:id="@+id/followBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_10dp"
        android:visibility="gone"/>
</RelativeLayout>