<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/FaceRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/skin_aio_input_bar_bg"
        android:minHeight="55dp">

        <ImageView
            android:id="@+id/mc_chatting_mode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/selector_chatting_mode" />

        <ImageView
            android:id="@+id/btn_face"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/mc_chatting_mode"
            android:src="@drawable/selector_type_btn" />

        <RelativeLayout
            android:id="@+id/rl_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/btn_face">

            <RelativeLayout
                android:id="@+id/rl_edAndbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible">

                <EditText
                    android:id="@+id/et_sendmessage1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toLeftOf="@+id/btn_sends"
                    android:background="@drawable/skin_aio_input_bg"
                    android:maxLines="5"
                    android:singleLine="false"
                    android:textColor="@color/font_grey"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/btn_sends"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp">

                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/skin_aio_send_button_inactive"
                        android:textColor="#9c9c9c"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btn_switch_to_voice"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_voice_mode" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_voiceAndBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/mBtnRcd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/btn_voice_change"
                    android:background="@drawable/skin_aio_voice_button_normal"
                    android:gravity="center"
                    android:singleLine="false"
                    android:text="按住  说话"
                    android:textColor="@color/font_grey"
                    android:textSize="@dimen/font_15sp" />

                <RelativeLayout
                    android:id="@+id/btn_voice_change"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp">

                    <Button
                        android:id="@+id/btn_voice_changebtn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/selector_keyborad_mode" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
    <!-- 148dip -->

    <RelativeLayout
        android:id="@+id/message_plugin_box"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/chat_bottom_input"></RelativeLayout>

</LinearLayout>