<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_layout"
    android:orientation="vertical">

    <include layout="@layout/public_top_view"></include>

    <com.tianyu.seelove.view.PullToRefreshView
        android:id="@+id/pull_to_refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridView
            android:id="@+id/userGridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="@dimen/layout_5dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/layout_5dp" />

        <include
            android:id="@+id/emptyLayout"
            layout="@layout/public_empty_view"></include>

    </com.tianyu.seelove.view.PullToRefreshView>
</LinearLayout>