<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/root_layout"
    android:orientation="vertical">

    <include
        android:id="@+id/about_layout"
        layout="@layout/public_top_view" />

    <com.tianyu.seelove.view.photoview.PhotoView
        android:id="@+id/photoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/about_layout"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="@dimen/layout_80dp"
            android:layout_height="@dimen/layout_30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/layout_15dp"
            android:background="@drawable/shape_corners_button_red_7a"
            android:text="@string/sure"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/layout_80dp"
            android:layout_height="@dimen/layout_30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_15dp"
            android:background="@drawable/shape_corners_button_red_7a"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/font_12sp" />
    </RelativeLayout>
</RelativeLayout>